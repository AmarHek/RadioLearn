{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
	"paths": {
		"@app/*": ["app/*"],
		"@app/core/*": ["app/core/*"],
		"@app/shared/*": ["app/shared/*"],
		"@env/*": ["environments/*"]
	},
    "downlevelIteration": true,
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2015",
	"types": ["node"],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
