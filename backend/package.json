{
  "name": "radiospeech-server",
  "version": "1.0.0",
  "scripts": {
    "start": "node --inspect=5858 -r ts-node/register ./src/server.ts",
	"start:watch": "nodemon",
	"build": "tsc"
  },
  "private": true,
  "dependencies": {
    "body-parser": "^1.19.0",
    "core-js": "^3.6.5",
    "express": "^4.17.1",
    "file-system": "^2.2.2",
    "mongoose": "^5.10.14",
    "multer": "^1.4.2",
    "nanoid": "^3.1.23",
    "rxjs": "^6.6.6",
    "tslib": "^2.0.0",
    "uuid": "^8.3.2",
    "xlsx": "^0.16.9",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/mongoose": "^5.11.97",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.3.2",
    "awesome-typescript-loader": "^5.2.1",
    "codelyzer": "^6.0.0",
    "nodemon": "^2.0.6",
    "source-map-loader": "^3.0.0",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "nodemonConfig": {
	"ignore": [
	  "**/*.test.ts",
	  "**/*.spec.ts",
	  ".git",
	  "node_modules"
	],
	"watch": [
	  "src"
	],
	"exec": "npm start",
	"ext": "ts"
  }
}
